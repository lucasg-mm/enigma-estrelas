sol_inicial <- Solução obtida pela heurística de nearest neighboors
sol_inicial <- Melhorar a solução obtida pela heurística de nearest neighboors através da heurística 2-opt

sol <- resolver o problema usando sol_inicial como solução sol_inicial

enquanto sol tiver subciclos

    adiciona restrições dos subciclos encontrados ao modelo
    sol_fact <- get_fact(sol)  obtém uma solução factível a partir de sol
    se custo(sol_fact) < custo(sol_inicial)
        sol_inicial <- sol_fact
        sol_inicial <- 2-opt(sol_inicial)

